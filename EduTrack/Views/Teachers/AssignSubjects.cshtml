@model AssignSubjectsViewModel

@{
    ViewData["Title"] = "Assign Subjects";
}

<h1>Assign Subjects to @Model.TeacherName</h1>

<form asp-action="AssignSubjects" method="post">
    <input type="hidden" asp-for="TeacherId" />
    <div class="form-group">
        <label asp-for="Subjects" class="control-label">Subjects</label>
        <select asp-for="SelectedSubjectIds" class="form-control" asp-items="Model.Subjects" multiple="multiple"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Assign" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>