@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to EduTrack</h1>
    <p class="lead">Your personalized education tracker</p>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                @* Verificăm rolul utilizatorului curent și afișăm butoanele corespunzătoare *@
                @if (User.IsInRole("Admin"))
                {
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Subjects")">Manage Subjects</a>
                        <a class="btn btn-primary" href="@Url.Action("Index", "Teachers")">Manage Teachers</a>
                        <a class="btn btn-primary" href="@Url.Action("Index", "Students")">Manage Students</a>
                        <a class="btn btn-primary" href="@Url.Action("Index", "Marks")">View Marks</a>
                    </div>
                }
                else if (User.IsInRole("Teacher"))
                {
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Students")">View Students</a>
                        <a class="btn btn-primary" href="@Url.Action("Index", "Marks")">Manage Marks</a>
                    </div>
                }
                else if (User.IsInRole("Student"))
                {
                    <div class="d-grid gap-2">
                        <a class="btn btn-primary" href="@Url.Action("Index", "Marks")">View My Marks</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>