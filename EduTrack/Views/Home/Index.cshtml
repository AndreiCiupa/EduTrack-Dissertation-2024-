@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to EduTrack</h1>
    <p class="lead">Your personalized education tracker</p>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body text-center">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="d-grid gap-2">
                            <a class="btn btn-primary mb-2 custom-btn" href="@Url.Action("Index", "Subjects")">Manage Subjects</a>
                            <a class="btn btn-success mb-2 custom-btn" href="@Url.Action("Index", "Teachers")">Manage Teachers</a>
                            <a class="btn btn-info mb-2 custom-btn" href="@Url.Action("Index", "Students")">Manage Students</a>
                            <a class="btn btn-warning mb-2 custom-btn" href="@Url.Action("Index", "Marks")">View Marks</a>
                        </div>
                    }
                    else if (User.IsInRole("Teacher"))
                    {
                        <div class="d-grid gap-2">
                            <a class="btn btn-info mb-2 custom-btn" href="@Url.Action("Index", "Students")">View Students</a>
                            <a class="btn btn-warning mb-2 custom-btn" href="@Url.Action("Index", "Marks")">Manage Marks</a>
                        </div>
                    }
                    else if (User.IsInRole("Student"))
                    {
                        <div class="d-grid gap-2">
                            <a class="btn btn-primary mb-2 custom-btn" href="@Url.Action("Index", "Marks")">View My Marks</a>
                        </div>
                    }
                }
                else
                {
                    <div>
                        <p>You are not logged in. Please log in to access your dashboard.</p>
                        <a class="btn btn-primary" href="@Url.Page("/Account/Login", new { area = "Identity" })">Log In</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

