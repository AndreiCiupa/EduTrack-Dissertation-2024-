@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to EduTrack</h1>
    <p class="lead">Your personalized education tracker</p>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                @* Verificăm rolul utilizatorului curent și afișăm butoanele corespunzătoare *@
                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-primary mb-2" href="@Url.Action("Index", "Subjects")">Manage Subjects</a>
                    <a class="btn btn-primary mb-2" href="@Url.Action("Index", "Teachers")">Manage Teachers</a>
                    <a class="btn btn-primary mb-2" href="@Url.Action("Index", "Students")">Manage Students</a>
                    <a class="btn btn-primary mb-2" href="@Url.Action("Index", "Marks")">View Marks</a>
                }
                else if (User.IsInRole("Teacher"))
                {
                    <a class="btn btn-primary mb-2" href="@Url.Action("Index", "Students")">View Students</a>
                    <a class="btn btn-primary mb-2" href="@Url.Action("Index", "Marks")">Manage Marks</a>
                }
                else if (User.IsInRole("Student"))
                {
                    <a class="btn btn-primary mb-2" href="@Url.Action("Index", "Marks")">View My Marks</a>
                }
            </div>
        </div>
    </div>
</div>